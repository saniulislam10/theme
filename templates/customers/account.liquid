<div class="customer account">
  <div class="account__header">
    <h1 class="account__title">{{ 'customer.account.title' | t }}</h1>
    <a href="{{ routes.account_logout_url }}" class="account__logout">
      {{ 'customer.log_out' | t }}
    </a>
  </div>

  <div class="account__content">
    <div class="account__orders">
      <h2 class="account__orders-title">{{ 'customer.orders.title' | t }}</h2>
      
      {%- if customer.orders.size > 0 -%}
        <table class="account__orders-table">
          <thead>
            <tr>
              <th>{{ 'customer.orders.order_number' | t }}</th>
              <th>{{ 'customer.orders.date' | t }}</th>
              <th>{{ 'customer.orders.payment_status' | t }}</th>
              <th>{{ 'customer.orders.fulfillment_status' | t }}</th>
              <th>{{ 'customer.orders.total' | t }}</th>
            </tr>
          </thead>
          <tbody>
            {%- for order in customer.orders -%}
              <tr>
                <td>
                  <a href="{{ order.customer_url }}" class="account__order-link">
                    {{ order.name }}
                  </a>
                </td>
                <td>{{ order.created_at | date: format: 'date' }}</td>
                <td>{{ order.financial_status_label }}</td>
                <td>{{ order.fulfillment_status_label }}</td>
                <td>{{ order.total_price | money }}</td>
              </tr>
            {%- endfor -%}
          </tbody>
        </table>
      {%- else -%}
        <p>{{ 'customer.orders.none' | t }}</p>
      {%- endif -%}
    </div>

    <div class="account__addresses">
      <h2 class="account__addresses-title">{{ 'customer.addresses.title' | t }}</h2>
      
      {%- if customer.addresses_count > 0 -%}
        <div class="account__addresses-list">
          {%- for address in customer.addresses -%}
            <div class="account__address">
              <div class="account__address-content">
                {{ address | format_address }}
              </div>
              <div class="account__address-actions">
                <button
                  type="button"
                  class="account__address-edit"
                  data-address-id="{{ address.id }}"
                >
                  {{ 'customer.addresses.edit' | t }}
                </button>
                <button
                  type="button"
                  class="account__address-delete"
                  data-address-id="{{ address.id }}"
                  data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}"
                >
                  {{ 'customer.addresses.delete' | t }}
                </button>
              </div>
            </div>
          {%- endfor -%}
        </div>
      {%- else -%}
        <p>{{ 'customer.addresses.none' | t }}</p>
      {%- endif -%}

      <button type="button" class="account__address-add">
        {{ 'customer.addresses.add_new' | t }}
      </button>
    </div>
  </div>
</div> 