<div class="customer addresses">
  <div class="addresses__header">
    <h1 class="addresses__title">{{ 'customer.addresses.title' | t }}</h1>
    <a href="{{ routes.account_url }}" class="addresses__back-link">
      {{ 'customer.account.return' | t }}
    </a>
  </div>

  <div class="addresses__content">
    <div class="addresses__list">
      {%- for address in customer.addresses -%}
        <div class="addresses__item">
          <div class="addresses__item-content">
            {{ address | format_address }}
          </div>

          <div class="addresses__item-actions">
            <button
              type="button"
              class="addresses__item-edit"
              data-address-id="{{ address.id }}"
            >
              {{ 'customer.addresses.edit' | t }}
            </button>
            <button
              type="button"
              class="addresses__item-delete"
              data-address-id="{{ address.id }}"
              data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}"
            >
              {{ 'customer.addresses.delete' | t }}
            </button>
          </div>
        </div>
      {%- endfor -%}
    </div>

    <button type="button" class="addresses__add button">
      {{ 'customer.addresses.add_new' | t }}
    </button>

    <div id="AddressNewForm" class="addresses__form" style="display: none;">
      {%- form 'customer_address', customer.new_address -%}
        <h2 class="addresses__form-title">
          {{ 'customer.addresses.add_new' | t }}
        </h2>

        <div class="addresses__form-fields">
          <div class="addresses__form-field">
            <label for="AddressFirstNameNew" class="addresses__form-label">
              {{ 'customer.addresses.first_name' | t }}
            </label>
            <input
              type="text"
              id="AddressFirstNameNew"
              name="address[first_name]"
              value="{{ form.first_name }}"
              autocomplete="given-name"
              class="addresses__form-input"
            >
          </div>

          <div class="addresses__form-field">
            <label for="AddressLastNameNew" class="addresses__form-label">
              {{ 'customer.addresses.last_name' | t }}
            </label>
            <input
              type="text"
              id="AddressLastNameNew"
              name="address[last_name]"
              value="{{ form.last_name }}"
              autocomplete="family-name"
              class="addresses__form-input"
            >
          </div>

          <div class="addresses__form-field">
            <label for="AddressCompanyNew" class="addresses__form-label">
              {{ 'customer.addresses.company' | t }}
            </label>
            <input
              type="text"
              id="AddressCompanyNew"
              name="address[company]"
              value="{{ form.company }}"
              autocomplete="organization"
              class="addresses__form-input"
            >
          </div>

          <div class="addresses__form-field">
            <label for="AddressAddress1New" class="addresses__form-label">
              {{ 'customer.addresses.address1' | t }}
            </label>
            <input
              type="text"
              id="AddressAddress1New"
              name="address[address1]"
              value="{{ form.address1 }}"
              autocomplete="address-line1"
              class="addresses__form-input"
            >
          </div>

          <div class="addresses__form-field">
            <label for="AddressAddress2New" class="addresses__form-label">
              {{ 'customer.addresses.address2' | t }}
            </label>
            <input
              type="text"
              id="AddressAddress2New"
              name="address[address2]"
              value="{{ form.address2 }}"
              autocomplete="address-line2"
              class="addresses__form-input"
            >
          </div>

          <div class="addresses__form-field">
            <label for="AddressCityNew" class="addresses__form-label">
              {{ 'customer.addresses.city' | t }}
            </label>
            <input
              type="text"
              id="AddressCityNew"
              name="address[city]"
              value="{{ form.city }}"
              autocomplete="address-level2"
              class="addresses__form-input"
            >
          </div>

          <div class="addresses__form-field">
            <label for="AddressCountryNew" class="addresses__form-label">
              {{ 'customer.addresses.country' | t }}
            </label>
            <select
              id="AddressCountryNew"
              name="address[country]"
              data-default="{{ form.country }}"
              autocomplete="country"
              class="addresses__form-select"
            >
              {{ country_option_tags }}
            </select>
          </div>

          <div class="addresses__form-field">
            <label for="AddressProvinceNew" class="addresses__form-label">
              {{ 'customer.addresses.province' | t }}
            </label>
            <select
              id="AddressProvinceNew"
              name="address[province]"
              data-default="{{ form.province }}"
              autocomplete="address-level1"
              class="addresses__form-select"
            ></select>
          </div>

          <div class="addresses__form-field">
            <label for="AddressZipNew" class="addresses__form-label">
              {{ 'customer.addresses.zip' | t }}
            </label>
            <input
              type="text"
              id="AddressZipNew"
              name="address[zip]"
              value="{{ form.zip }}"
              autocapitalize="characters"
              autocomplete="postal-code"
              class="addresses__form-input"
            >
          </div>

          <div class="addresses__form-field">
            <label for="AddressPhoneNew" class="addresses__form-label">
              {{ 'customer.addresses.phone' | t }}
            </label>
            <input
              type="tel"
              id="AddressPhoneNew"
              name="address[phone]"
              value="{{ form.phone }}"
              autocomplete="phone"
              class="addresses__form-input"
            >
          </div>
        </div>

        <div class="addresses__form-actions">
          <button type="submit" class="addresses__form-submit button">
            {{ 'customer.addresses.add' | t }}
          </button>
          <button type="button" class="addresses__form-cancel">
            {{ 'customer.addresses.cancel' | t }}
          </button>
        </div>
      {%- endform -%}
    </div>
  </div>
</div> 