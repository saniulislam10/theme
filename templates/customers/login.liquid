<div class="customer login">
  <div class="login__header">
    <h1 class="login__title">{{ 'customer.login.title' | t }}</h1>
    <a href="{{ routes.account_register_url }}" class="login__register-link">
      {{ 'customer.login.create_account' | t }}
    </a>
  </div>

  <div class="login__content">
    {%- form 'customer_login' -%}
      {%- if form.errors -%}
        <div class="login__errors">
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}

      <div class="login__field">
        <label for="CustomerEmail" class="login__label">
          {{ 'customer.login.email' | t }}
        </label>
        <input
          type="email"
          name="customer[email]"
          id="CustomerEmail"
          class="login__input"
          autocomplete="email"
          autocorrect="off"
          autocapitalize="off"
          {% if form.errors contains 'form' %}
            aria-invalid="true"
          {% endif %}
        >
      </div>

      <div class="login__field">
        <label for="CustomerPassword" class="login__label">
          {{ 'customer.login.password' | t }}
        </label>
        <input
          type="password"
          name="customer[password]"
          id="CustomerPassword"
          class="login__input"
          autocomplete="current-password"
          {% if form.errors contains 'form' %}
            aria-invalid="true"
          {% endif %}
        >
      </div>

      <div class="login__actions">
        <button type="submit" class="login__submit button">
          {{ 'customer.login.sign_in' | t }}
        </button>
        <a href="#recover" class="login__forgot-password">
          {{ 'customer.login.forgot_password' | t }}
        </a>
      </div>
    {%- endform -%}

    {%- form 'recover_customer_password' -%}
      <div id="recover" class="login__recover" style="display: none;">
        <h2 class="login__recover-title">
          {{ 'customer.recover_password.title' | t }}
        </h2>
        
        <div class="login__field">
          <label for="RecoverEmail" class="login__label">
            {{ 'customer.recover_password.email' | t }}
          </label>
          <input
            type="email"
            name="email"
            id="RecoverEmail"
            class="login__input"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="RecoverEmail-email-error"
            {% endif %}
          >
        </div>

        {%- if form.errors -%}
          <div class="login__errors">
            {{ form.errors | default_errors }}
          </div>
        {%- endif -%}

        <div class="login__actions">
          <button type="submit" class="login__submit button">
            {{ 'customer.recover_password.submit' | t }}
          </button>
          <button type="button" class="login__cancel">
            {{ 'customer.recover_password.cancel' | t }}
          </button>
        </div>
      </div>
    {%- endform -%}
  </div>
</div> 