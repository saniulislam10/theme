{%- liquid
  assign collections = section.settings.collections
  assign columns = section.settings.columns
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign show_view_all = section.settings.show_view_all
  assign view_all_text = section.settings.view_all_text
  assign view_all_link = section.settings.view_all_link
-%}

<div class="featured-collections" data-section-id="{{ section.id }}" data-section-type="featured-collections">
  <div class="featured-collections__header">
    {%- if heading != blank -%}
      <h2 class="featured-collections__heading">{{ heading }}</h2>
    {%- endif -%}
    
    {%- if subheading != blank -%}
      <div class="featured-collections__subheading">{{ subheading }}</div>
    {%- endif -%}
  </div>

  <div class="featured-collections__grid featured-collections__grid--{{ columns }}">
    {%- for collection in collections -%}
      <div class="featured-collections__item">
        <a href="{{ collection.url }}" class="featured-collections__link">
          <div class="featured-collections__image-wrapper">
            {%- if collection.image != blank -%}
              <img
                src="{{ collection.image | img_url: '600x' }}"
                alt="{{ collection.image.alt | escape }}"
                class="featured-collections__image"
                loading="lazy"
                width="{{ collection.image.width }}"
                height="{{ collection.image.height }}"
              >
            {%- else -%}
              {{ 'collection-1' | placeholder_svg_tag: 'featured-collections__image featured-collections__image--placeholder' }}
            {%- endif -%}
          </div>
          
          <div class="featured-collections__content">
            <h3 class="featured-collections__title">{{ collection.title }}</h3>
            <div class="featured-collections__product-count">
              {{ 'collections.general.product_count' | t: count: collection.all_products_count }}
            </div>
          </div>
        </a>
      </div>
    {%- endfor -%}
  </div>

  {%- if show_view_all and view_all_link != blank -%}
    <div class="featured-collections__footer">
      <a href="{{ view_all_link }}" class="featured-collections__view-all button">
        {{ view_all_text }}
      </a>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Featured Collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collections"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "collection_list",
      "id": "collections",
      "label": "Collections",
      "limit": 12
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columns",
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "Button Text",
      "default": "View All Collections"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "Button Link",
      "default": "/collections"
    }
  ],
  "presets": [
    {
      "name": "Featured Collections",
      "category": "Collection"
    }
  ]
}
{% endschema %} 