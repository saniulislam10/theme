{%- style -%}
  .testimonials {
    padding: 4rem 1.5rem;
    text-align: center;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }
  .testimonials__heading {
    margin: 0 0 2rem;
    font-size: 2rem;
  }
  .testimonials__slider {
    max-width: 800px;
    margin: 0 auto;
  }
  .testimonials__slide {
    padding: 2rem;
  }
  .testimonials__content {
    font-size: 1.2rem;
    font-style: italic;
    margin-bottom: 1.5rem;
  }
  .testimonials__author {
    font-weight: bold;
    margin-bottom: 0.5rem;
  }
  .testimonials__rating {
    color: #ffc107;
    font-size: 1.5rem;
  }
  .slick-dots {
    display: flex;
    justify-content: center;
    list-style: none;
    padding: 0;
    margin: 2rem 0 0;
  }
  .slick-dots li {
    margin: 0 0.5rem;
  }
  .slick-dots button {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #ddd;
    border: none;
    cursor: pointer;
  }
  .slick-dots .slick-active button {
    background-color: {{ section.settings.accent_color }};
  }
{%- endstyle -%}

<div class="testimonials">
  {%- if section.settings.heading != blank -%}
    <h2 class="testimonials__heading">{{ section.settings.heading }}</h2>
  {%- endif -%}
  
  <div class="testimonials__slider">
    {%- for block in section.blocks -%}
      <div class="testimonials__slide" {{ block.shopify_attributes }}>
        <div class="testimonials__content">{{ block.settings.content }}</div>
        <div class="testimonials__author">{{ block.settings.author }}</div>
        <div class="testimonials__rating">
          {%- for i in (1..5) -%}
            {%- if i <= block.settings.rating -%}
              ★
            {%- else -%}
              ☆
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    $('.testimonials__slider').slick({
      dots: true,
      arrows: false,
      infinite: true,
      speed: 500,
      slidesToShow: 1,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 5000
    });
  });
</script>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Our Customers Say"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f4f4f4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "content",
          "label": "Testimonial content",
          "default": "This is a sample testimonial. Replace it with your actual customer reviews."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author name",
          "default": "John Doe"
        },
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "Rating",
          "default": 5
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "category": "Social proof",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %} 